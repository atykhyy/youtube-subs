@page
@model IndexModel
@{
    ViewData["Title"] = "Youtube-subs";
}

<div class="text-center">
    <h1 class="display-4">Youtube-subs</h1>
    <p>Enter youtube video URL to read its auto-generated subtitles:</p>
    <form method="post" asp-page-handler="Read">
        <input type="url" asp-for="VideoUrl" />
        <input type="submit" value="Read" />
        in
        <select asp-for="UseLang" asp-items="@Languages.Items">
            <option value="*">(select based on your language preferences)</option>
        </select>
    </form>
    <p />
    <p>Select your preferred subtitle languages:</p>
    <form method="post" asp-page-handler="Save">
        <table align="center">
            <thead>
                <tr>
                    <td />
                    <td>Language</td>
                    <td>Use this language if it is the audio language</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>#1</td>
                    <td>
                        <select asp-for="Lang1.Code" asp-items="@Languages.Items">
                        </select>
                    </td>
                    <td>
                        <input asp-for="Lang1.Prefer">
                    </td>
                </tr>
                <tr>
                    <td>#2</td>
                    <td>
                        <select asp-for="Lang2.Code" asp-items="@Languages.Items">
                        </select>
                    </td>
                    <td>
                        <input asp-for="Lang2.Prefer">
                    </td>
                </tr>
                <tr>
                    <td>#3</td>
                    <td>
                        <select asp-for="Lang3.Code" asp-items="@Languages.Items">
                        </select>
                    </td>
                    <td>
                        <input asp-for="Lang3.Prefer">
                    </td>
                </tr>
            </tbody>
        </table>
        <input type="submit" value="Save" />
    </form>
</div>
